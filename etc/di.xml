<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
  <type name="Duitku\Varitel\Logger\DuitkuHandler">
    <arguments>
      <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
    </arguments>
  </type>
  <type name="Duitku\Varitel\Logger\DuitkuLogger">
    <arguments>
      <argument name="name" xsi:type="string">Duitku</argument>
      <argument name="handlers"  xsi:type="array">
        <item name="system" xsi:type="object">Duitku\Varitel\Logger\DuitkuHandler</item>
      </argument>
    </arguments>
  </type>
</config>